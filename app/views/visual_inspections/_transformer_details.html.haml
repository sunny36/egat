%dl
  .grid_8
    %dt Transformer Name
    %dd
      = " : " + (transformer.transformer_name.nil? ? '-' : transformer.transformer_name)
  .grid_8
    %dt Equipment No.
    %dd
      = " : " + (transformer.egatsn.nil? ? '-' : transformer.egatsn)
  .grid_8
    %dt MVA Rating
    %dd
      = " : " + (transformer.maxcapacity.nil? ? '-' : transformer.maxcapacity.to_s + " MVA")
  .grid_8
    %dt HV Rating
    %dd
      = " : " + (transformer.hv.nil? ? '-' : transformer.hv.to_s + " kV")
  .grid_8
    %dt First Energized:
    %dd
      = " : " + (transformer.first_energize.nil? ? '-' : transformer.first_energize.strftime("%d/%m/%Y"))
  .grid_8
    %dt Manufacturer
    %dd
      = " : " + (transformer.brand_name.nil? ? '-' : transformer.brand_name)
  .grid_8
    %dt OLTC Manufacturer
    %dd
      = " : " + (transformer.oltc_manufacturer.nil? ? '-' : transformer.oltc_manufacturer)
  .grid_8
    %dt OLTC Type
    %dd
      = " : " + (transformer.oltc_type.nil? ? '-' : transformer.oltc_type)
  .grid_8
    %dt Vectory Group
    %dd
      = " : " + (transformer.vector_group.nil? ? '-' : transformer.vector_group)
  .grid_8
    %dt Winding Type
    %dd
      = " : " + transformer_winding_type(transformer)
